<%- include ("../../partials/header.ejs") %> <%- include
("../../partials/navbar.ejs") %> <%- include ("../../partials/sidebar.ejs") %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Edit Payment</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payent</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form Edit Payment "<%= payment.banks.name %>"
              </h3>
            </div>

            <!-- form start -->
            <form
              action="/payment/edit/<%= payment._id%>?_method=PUT"
              method="POST"
            >
              <div class="card-body">
                <!-- Field Type -->
                <div class="form-group">
                  <label for="type">Type Pembayaran</label>
                  <input
                    type="text"
                    class="form-control"
                    id="type"
                    placeholder="Masukkan Type Pembayaran"
                    name="type"
                    required
                    value="<%= payment.type %>"
                  />
                </div>
                <!-- Field Banks -->
                <div class="form-group">
                  <label>Bank</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="category"
                    placeholder="Masukan Nama Bank"
                    required
                  >
                    
                    <% banks.forEach(bank=> { %>
                    <option value="<%= bank._id %>"
                      <% payment.banks.forEach(paymentBank => { %>
                        <% if(bank._id.toString() === paymentBank._id.toString()) { %>
                          selected
                       <% } %>
                      <% }) %>
                      >
                      <%= bank.name %> |   <%= bank.bankName %>  |  <%= bank.noRekening %> 
                    </option>
                    <% }) %>
                  </select>
                </div>
                <!-- Field Nominal -->
                
                
              </div>
            
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>

</div>
<%- include ("../../partials/footer.ejs") %> <%- include
("../../partials/js.ejs") %>

 