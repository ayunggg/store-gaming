<%- include ("../../partials/header.ejs") %> <%- include
("../../partials/navbar.ejs") %> <%- include ("../../partials/sidebar.ejs") %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form Edit Nominal "<%= nominal.name %>"
              </h3>
            </div>

            <!-- form start -->
            <form
              action="/nominal/edit/<%= nominal._id%>?_method=PUT"
              method="POST"
            >
              <div class="card-body">
                <div class="form-group">
                  <label>Minimal</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                  >
                    <option selected="selected"><%= nominal.coinName %></option>
                    <option value="Gold">Gold</option>
                    <option value="Diamond">Diamond</option>
                    <option value="Jewel">Jewel</option>
                    <option value="Wallet">Wallet</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah Koin</label>
                  <input
                    type="number"
                    class="form-control"
                    id="coinQuantity"
                    placeholder="Masukkan Jumlah Koin"
                    name="coinQuantity"
                    required
                    value="<%= nominal.coinQuantity %>"
                  />
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input
                    type="number"
                    class="form-control"
                    id="price"
                    placeholder="Masukkan Jumlah Koin"
                    name="price"
                    value="<%= nominal.price%>"
                    required
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<%- include ("../../partials/footer.ejs") %> <%- include
("../../partials/js.ejs") %>
